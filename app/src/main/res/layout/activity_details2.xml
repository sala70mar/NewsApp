<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailsActivity2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/det_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_270sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:riv_corner_radius_bottom_right="@dimen/_70sdp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_marginTop="@dimen/_17sdp"
            app:layout_constraintTop_toBottomOf="@id/det_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <View
                    android:id="@+id/View"
                    android:layout_width="@dimen/_3sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:layout_height="@dimen/_26sdp"
                    app:layout_constraintBottom_toBottomOf="@id/title"
                    app:layout_constraintTop_toTopOf="@id/title"
                    android:background="#E91E63"/>

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:fontFamily="@font/alice"
                    android:letterSpacing=".1"
                    android:textSize="@dimen/_16ssp"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/View"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

            <TextView
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:id="@+id/dec"

                android:fontFamily="@font/monda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#85A3A0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />
            <LinearLayout
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:fontFamily="@font/monda"
                android:layout_marginStart="@dimen/_8sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source :"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"/>

                <TextView
                    android:fontFamily="@font/alice"

                    android:layout_marginStart="@dimen/_3sdp"
                    android:id="@+id/authr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_17ssp"
                    android:textColor="#E91E63"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/monda"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Content :"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"/>

                <TextView

                    android:fontFamily="@font/monda"

                    android:layout_marginStart="@dimen/_3sdp"
                    android:id="@+id/content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_13ssp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:layout_marginTop="@dimen/_17sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:fontFamily="@font/monda"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:textColor="#2196F3"
                    android:layout_height="wrap_content"
                    android:text="publish at"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"/>

                <TextView
                    android:fontFamily="@font/alice"

                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:id="@+id/publish_at"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold"/>

            </LinearLayout>



        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>